<h1>Restaurants</h1>
<%= link_to 'Add', new_restaurant_path %>
<% if @restaurants.length == 0 %>
  <p>Click 'Add' to create a new entry.</p>
<% end %>
<% @restaurants.each do |restaurant| %>
  <div class="restaurant">
    <h2><%= restaurant.name %></h2>
    <small><%= link_to 'View', restaurant_path(restaurant) %></small>
  </div>
<% end %>
