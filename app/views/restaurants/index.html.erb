<% content_for(:title, "Restaurants") %>

<div class="row">
  <div class="small-12 columns">
    <h1>Restaurants</h1>
    <%= link_to 'Add', new_restaurant_path %>
    <% if @restaurants.length == 0 %>
      <p>Click 'Add' to create a new entry.</p>
    <% end %>
    <% @restaurants.each do |restaurant| %>
      <div class="restaurant">
        <h2><%= restaurant.name %></h2>
        <p><%= link_to 'View', restaurant_path(restaurant) %></p>
      </div>
    <% end %>
  </div>
</div>
